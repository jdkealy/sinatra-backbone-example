source "http://rubygems.org"

#sinatra
gem "sinatra"
gem "sinatra-contrib"
gem "rake"
gem "yajl-ruby"
gem 'sinatra-backbone', :require => 'sinatra/backbone'

#db
gem 'mongo'
gem 'bson'
gem 'bson_ext'
gem 'qu-mongo'
